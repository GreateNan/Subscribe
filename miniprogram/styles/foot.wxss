/*底部导航栏*/

.bottom-bar {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0 15rpx 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  border-top: 1rpx solid #dcdcdc;
}

.bottom-bar-item {
  width: 25%;
  display: flex;
  flex-flow: column;
  align-items: center;
  position: relative;
}

.bottom-bar-item text {
  font-size: 24rpx;
  line-height: 50rpx;
  color: #979899;
  font-family: PingFang-SC-Medium;
  width: 100%;
  text-align: center;
}

.bottom-bar-item .pic_current {
  display: none;
}

.current .pic_default {
  display: none;
}

.current .pic_current {
  display: block;
}

.current text {
  color: #a53533;
}

.unread-count text {
  color: #fff;
  font-size: 26rpx;
}

.tab_item_icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 3rpx;
}

.transf {
  transform: rotate(90deg);
}

.unread-count {
  display: flex;
  justify-content: center;
  position: absolute;
  top: -5%;
  right: 20%;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: #a53533;
  font-size: 24rpx;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  text-indent: -2rpx;
}

.live {
  width: 44rpx;
  height: 44rpx;
}

.txtLive {
  position: absolute;
  bottom: 0;
  width: 50px;
  text-align: center;
}

.navigator-hover {
  background-color: transparent;
}
